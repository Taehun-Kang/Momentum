{
  "name": "youtube-shorts-mcp-server",
  "version": "1.0.0",
  "description": "YouTube Shorts AI 큐레이션 MCP 서버",
  "main": "correct-mcp-server.js",
  "type": "module",
  "scripts": {
    "start": "node correct-mcp-server.js",
    "dev": "node --watch correct-mcp-server.js",
    "test": "node --test",
    "stdio": "MCP_TRANSPORT=stdio node correct-mcp-server.js",
    "http": "MCP_TRANSPORT=http PORT=3000 node correct-mcp-server.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "youtube",
    "shorts",
    "ai",
    "curation",
    "claude"
  ],
  "author": "Wave Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/youtube-shorts-ai/mcp-system.git"
  },
  "bugs": {
    "url": "https://github.com/youtube-shorts-ai/mcp-system/issues"
  },
  "homepage": "https://github.com/youtube-shorts-ai/mcp-system#readme",
  "mcp": {
    "server": {
      "name": "youtube-shorts-ai-curator",
      "version": "1.0.0",
      "description": "AI-powered YouTube Shorts curation with LLM optimization and real-time trends",
      "capabilities": {
        "tools": [
          "search_videos",
          "get_trending_keywords",
          "optimize_query",
          "get_server_stats",
          "extract_related_keywords",
          "expand_keywords_with_brightdata",
          "extract_trending_keywords_advanced"
        ],
        "resources": [
          "cached-searches",
          "trend-data",
          "api-usage"
        ],
        "prompts": [
          "optimize-search",
          "analyze-results",
          "trend-recommendations"
        ]
      },
      "endpoints": [
        "POST /api/tools/call",
        "GET /api/resources/:name",
        "POST /api/search",
        "POST /api/chat",
        "GET /api/trends"
      ]
    }
  }
}
